
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- icon bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    
    <!-- navbar -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">User Management System</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
            
            
            </ul> 
            <form class="d-flex" method="POST" action="/" novalidate >
              <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>


       <!-- end navbar -->


      <div class="container pt-5 pb-5 ">

        <div class="row">
          <div class="col-6"><h1>Users</h1></div>
          <div class="col-6 d-flex justify-content-end " >
            <a href="/adduser" type="button" style="color:rgb(35, 212, 150)" class="btn " >+ Add User</a>
          </div>
        </div>

        <table class="table">
            <thead class="thead-dark" >
              <tr>
                <th style="color:rgb(35, 200, 212)" scope="col">#</th>
                <th style="color:rgb(38, 195, 215)" scope="col">First Name</th>
                <th style="color:rgb(35, 212, 150)" scope="col">Last Name </th>
                <th style="color:rgb(35, 212, 150)" scope="col">Email</th>
                <th style="color:rgb(35, 212, 150)" scope="col">Phone</th>
                <th style="color:rgb(35, 212, 150)" scope="col" class="text-center" >Action</th>

              </tr>
            </thead>
            <tbody>

              <%  row.forEach( function(item) {   %>

              <tr>
                <th scope="row"><%= item.id %> </th>
                <td> <%= item.prenom %> </td>
                <td> <%= item.name %> </td>
                <td><%= item.email %> </td>
                <td> <%= item.phone %> </td>
                <td  class="text-end" >
                    <a href="/viewUser/<%= item.id %>"  type="button" class="btn btn-primary btn-small " > <i class="bi bi-eye"></i>View</a>
                    <a href="/edituser/<%= item.id %>"  type="button" class="btn btn-success btn-small " > <i class="bi bi-pencil"></i> Edit</a>
                    <a href="/<%= item.id%>"  type="button" class="btn btn-danger btn-small " > <i class="bi bi-person-x"></i>Delete</a>
                </td>

              </tr>
              <% })  %>
             
            </tbody>
          </table>

      </div>










    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>